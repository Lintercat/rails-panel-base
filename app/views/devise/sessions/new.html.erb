<div class="col-lg-4 col-10 offset-lg-4 offset-1 mt-5 text-center">
  <h2>Log in</h2>
</div>

<div class="offset-lg-4 col-lg-4 col-10 offset-1 mb-3">
  <%= bootstrap_form_with(model: resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.form_group do %>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <% end %>

    <%= f.form_group do %>
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    <% end %>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group ml-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <%= f.submit "Log in", class: 'btn btn-block' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
  