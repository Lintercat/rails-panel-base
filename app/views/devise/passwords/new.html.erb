<div class="col-lg-4 col-10 offset-lg-4 offset-1 mt-5 text-center">
  <h2>Forgot your password?</h2>
</div>

<div class="offset-lg-4 col-lg-4 col-10 offset-1 mb-3">
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
  
    <%= f.form_group do %>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <% end %>
  
    <%= f.submit "Send me reset password instructions", class: "btn btn-block" %>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
